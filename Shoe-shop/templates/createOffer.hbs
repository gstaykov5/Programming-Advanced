{{> header}}
<h1>Create New Offer</h1>
<p class="message"></p>
<form action="/createOffer" method="POST">
    <div>
        <input type="text" placeholder="Name..." name="shoeModel">
    </div>
    <div>
        <input type="text" placeholder="Price..." name="price">
    </div>
    <div>
        <input type="text" placeholder="Image url..." name="imgUrl">
    </div>
    <div>
        <textarea placeholder="Give us some description about this offer..." name="description"></textarea>
    </div>
    <div>
        <input type="text" placeholder="Brand..." name="brand">
    </div>
    <div>
        <button href="./createOffer">Create</button>
    </div>
</form>
{{> footer}}